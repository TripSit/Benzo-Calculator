              <li class="list-group-item" id="inputDoseLow"></li>
              <li class="list-group-item" id="inputDoseCommon"></li>
              <li class="list-group-item" id="inputDoseStrong"></li>
              <li class="list-group-item" id="inputDoseHeavy"></li>
              <li class="list-group-item">
                <h4>Duration:</h4> </li>
              <li class="list-group-item" id="inputDuration"></li>
              <li class="list-group-item">
                <h4>Aftereffects:</h4>
                <li class="list-group-item" id="inputAftereffects"></li>
            </ul>
          </div>
          <div class="col-xs-12 col-md-6" id="outputInfo">
            <ul class="list-group">
              <li class="list-group-item active">
                <h3>Result dose: <span id="outputDoseResult">0</span> mg of <a href="http://drugs.tripsit.me/alprazolam"  id="outputName">Alprazolam</a></h3> </li>
              <li class="list-group-item">
                <h4>Summary:</h4> </li>
              <li class="list-group-item" id="outputSummary"></li>
